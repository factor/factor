ifneq ($(DEBUG), 0)
	SITE_CFLAGS += -fomit-frame-pointer
endif

EXE_SUFFIX =
DLL_PREFIX = lib
DLL_EXTENSION = .a
SHARED_DLL_EXTENSION = .so
SHARED_FLAG = -shared

PLAF_DLL_OBJS += build/os-unix.o
PLAF_EXE_OBJS += build/main-unix.o
PLAF_MASTER_HEADERS += vm/os-unix.hpp vm/atomic-gcc.hpp vm/atomic.hpp

FFI_TEST_CFLAGS = -fPIC

# LINKER = gcc -shared -o
