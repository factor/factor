        vm\vm.obj \
	vm\words.obj

.cpp.obj:
	cl /nologo /EHsc $(CL_FLAGS) /Fo$@ /c $<

all: factor.com factor.exe

factor.com: $(OBJS)
	link $(LINK_FLAGS) /nologo /out:factor.com /SUBSYSTEM:console $(OBJS)

factor.exe: $(OBJS)
	link $(LINK_FLAGS) /nologo /out:factor.exe /SUBSYSTEM:windows $(OBJS)

clean:
	del vm\*.obj
	del factor.com
	del factor.exe

.PHONY: clean
