		<SEQ TYPE="LITERAL1">}</SEQ>
		<SEQ TYPE="LITERAL1">{</SEQ>
		<SEQ TYPE="LITERAL1">.</SEQ>
		<SEQ TYPE="LITERAL1">,</SEQ>
		<SEQ TYPE="LITERAL1">;</SEQ>
